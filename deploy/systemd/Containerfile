FROM python:3.12-slim

# create a non-root user early so we can COPY with ownership
RUN adduser --disabled-password --gecos '' appuser

WORKDIR /app

# copy application files and set ownership to the non-root user
COPY --chown=appuser:appuser . /app

# run as the unprivileged user and add venv to PATH
USER appuser

RUN set -eux; \
    python3 -m venv /app/venv; \
    /app/venv/bin/python3 -m pip install --upgrade pip setuptools wheel; \
    /app/venv/bin/pip3 install --no-cache-dir -r requirements.txt


ENV PATH="/app/venv/bin:$PATH"

CMD ["python3", "bot.py"]
